<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/bookid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSend"
        android:visibility="gone" />


    <TextView
        android:id="@+id/book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image" />

    <!-- Name Label -->
    <TextView
        android:id="@+id/author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_title"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image" />
    <!-- Name Label -->
    <TextView
        android:id="@+id/author_sname"
        android:layout_width="match_parent"
        android:layout_below="@+id/author_name"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image"
        android:layout_height="wrap_content" />
    <!-- Name Label -->
    <TextView
        android:id="@+id/book_category"
        android:layout_width="match_parent"
        android:layout_below="@+id/author_sname"
        android:layout_toRightOf="@+id/image"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_below="@+id/book_category"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/emailcheck"
        android:layout_width="match_parent"
        android:layout_below="@+id/book_category"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image"
        android:visibility="gone"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Edytuj"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnSend"
        android:layout_toStartOf="@+id/btnSend"
        android:onClick="EditBook"
        />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="zgłoś"
        android:layout_below="@+id/email"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="report"/>

    <Button
        android:id="@+id/btnRentBook"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSend"
        android:layout_marginTop="40dip"
        android:background="@null"
        android:hint="WYPOŻYCZ"
        android:textAllCaps="false"
        android:textColor="@color/input_register_hint"
        android:textSize="15dp"
        android:onClick="BorrowBook"/>
</RelativeLayout>